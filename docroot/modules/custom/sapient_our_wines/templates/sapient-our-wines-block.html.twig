            <a href="http://brancottvanilla.dev.dd:8083/en" class="logo-img"></a>
        </div>

        <ul class="nav navbar-nav menu">
            {% for key, filter in filters %}  		
                {% if key == 'range' %}
                    {% set newkey = 'Ranges' %}
                {% elseif key == 'wine_type' %}
                    {% set newkey = 'Wine Types' %}
                {% elseif key == 'varietals' %}
                    {% set newkey = 'Varietals' %}
                {% elseif key == 'food_mathces' %}
                    {% set newkey = 'Food Matches' %}
                {% else %}
                    {% set newkey = key %}
                {% endif %}
                <li class="menu-item dropdown our-wines">
                    <a href="#" class="dropdown-toggle" role="button" aria-haspopup="true">{{ newkey }} <span class="expand-icon" data-toggle="dropdown"></span>
                    </a>
                    <ul class="dropdown-menu sub-menu" style="height: 71px;">
                        <div class="sub-menu-wrapper">
                            {% for subfilter_key, subfilter in filter %}
                                <li class="sub-menu-link">
                                    <a href="#" data-category=" {{ key }}"
                                       data-category-filter="{{ subfilter_key }}" class="filter-item" style="color: white;"> {{ subfilter_key }}</a>
                                </li>
                            {% endfor %}		
                        </div>
                    </ul>
                </li>	 
            {% endfor %}
        </ul>
    </div><!--/.nav-collapse -->
</nav>



