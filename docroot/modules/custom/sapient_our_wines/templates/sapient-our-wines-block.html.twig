<div style="background-color: #1e7266; text-align: center;">
    <a href="#" data-category-filter="all-data" class="filter-item" style="color: white;">All data</a>
    <a href="#" data-category-filter="Brancott Estate" class="filter-item" style="color: white;">Brancott Estate</a>
    <a href="#" data-category-filter="Flight" class="filter-item" style="color: white;">Flight</a>
</div>
<section id="product-grid">
    <div id="response-wrapper">
        {% for key,arg in arguments %}
        <div class="category-wrapper">
            <div class="category-header">
                <p class="title-tag">{{ arg.title }}</p>
                <h2>{{ arg.strapline }}</h2>
                <p>{{ arg.description }}</p>
            </div>
            <div class="category-grid">
                {% for tile in arg.associated_wines %}
                    <div class="product-tile">
                        <div class="product-shot">
                            <img src="{{ tile.url }}" />
                            <div class="product-bg" style="background-color: ;"></div>
                        </div>
                        <h3>{{ tile.range }}</h3>
                        <p>{{ tile.title }}</p>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% endfor %}
    </div>
</section>