<div id="hero-component" class="container-fluid  hero-container">
	<div class="banner-image" style="background-image: url('{{ fields.field_hero_background_image_larg.content }}')"></div>
	<div class="hero-bottom">
		<img src="/{{ directory }}/css/images/triange-1.png" alt="" class="triangle">
		<img src="/{{ directory }}/css/images/noise-triangle.svg" alt="" class="triangle-right">
	</div>
	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 hero-inner-container">
		<span class="header_f">{{ fields.field_hero_subheading.content }}</span>
		<h1 style = "color : {{ fields.field_headline_colour.content }}; text-align : {{ fields.field_hero_headline_position.content }} !important;">{{ fields.field_hero_headline.content |upper |raw }}</h1>
		<a href="{{ fields.field_hero_cta_first.content }}" class="cta dark find-out-more">{{ fields.field_hero_cta_first_1.content }}</a>
		<div class="cta-visitus">
			<a href="{{ fields.field_hero_cta_second.content }}" class="cta secondary-green visit-all-wine">{{ fields.field_hero_cta_second_1.content }}</a>
			<a href="{{ fields.field_hero_cta_thi.content }}" class="cta secondary-green light ">{{ fields.field_hero_cta_thi_1.content }}</a>
		</div>
	</div>
 	<div class="hidden-sm hidden-xs hero-bottle-wrapper">
		<picture>
			<source class="hero-bottle" media="(max-width: 1281px)" srcset="{{ fields.field_hero_right_side_image.content }}"> 
			<source class="hero-bottle" media="(max-width: 769px)"  srcset="{{ fields.field_hero_right_side_image.content }}"> 
			<source  class="hero-bottle" srcset="{{ fields.field_hero_right_side_image.content }}"> 
			<img class="hero-bottle" src="{{ fields.field_hero_right_side_image.content }}" alt="{{ fields.field_hero_right_side_image_1.content }}"> 
		</picture>
	</div>
 </div>
 
 
 
