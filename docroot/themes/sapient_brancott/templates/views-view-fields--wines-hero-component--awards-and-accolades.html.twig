<section class="awards-accolades">
	<div class="heading-image-wrapper">
		<picture>
			<source  media="(max-width: 321px)" srcset="{{ fields.field_award_image_1.content }}" class="background-image">   
			<source  media="(max-width: 691px)" srcset="{{ fields.field_award_image_1.content }}" class="background-image">
			<source  media="(max-width: 769px)" srcset="{{ fields.field_award_image.content }}" class="background-image">  
			<source  media="(max-width: 1281px)" srcset="{{ fields.field_award_image.content }}" class="background-image"> 
			<img src="{{ fields.field_award_image.content }}" alt="Award Image">
		</picture>
		<h3 class="header_b">{{ fields.field_award_title.content }}</h3>
	</div>
	<div class="list-wrapper col-xs-12 col-sm-12 col-md-12 col-lg-12">
		{% for key, items in wine_award %} 
		<div class="awards-details-wrapper col-xs-12 col-sm-12 col-md-12 col-lg-4">
			<div>{{ items.type }}</div>
			<div>{{ items.awardedAt }} </div>
			<div>VINTAGE: {{ items.vintage }} </div>
		</div>
		{% endfor %}
	</div>
	<div class="see-more-btn-wrapper">	
		<a href="{{ fields.field_hero_cta_first.content }}" class="cta see-more-btn">See 24 more</a>
	</div>	
</section>