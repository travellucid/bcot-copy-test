<div class="enquire-form">
	<div class="form-details">
		<h2>Enquire Us</h2>
		<p class="form-info">We would love to tailor a package for you and your guests. Get in touch using the form below and we will get back to you as soon as possible.</p>
		<span class="form-guidelines">All fields marked * are required.</span>
	</div>	
	<div class="error-msg" id="errMsg">
		<div class="header_e">One or more required fields were not filled out correctly:</div>
		<div class="messages header_g"></div>
	</div>	
	<form {{form.attributes }}>
	      {{ form.form_build_id }}
                    {{ form.form_token }}
                    {{ form.form_id }}
                    {{ form.subject }}
                    {{ form.message }}
		<div class="col-md-12 col-xs-12 col-sm-12 group ">
			{{ form.elements.name }}
			
		</div>
		<div class="col-md-6 col-xs-12 col-sm-12 group ">
			{{ form.elements.phone_number }}
		</div>
		<div class="col-md-6 col-xs-12 col-sm-12 group ">
			{{ form.elements.email_address }}
		</div>
		<div class="col-md-6 col-xs-12 col-sm-12 group">
			{{ form.elements.type_of_function }}
		</div>
		<div class="col-md-6 col-xs-12 col-sm-12 group">
			{{ form.elements.no_of_people }}
		</div>
		<div class="col-md-12 col-xs-12 col-sm-12 group">
			{{ form.elements.preferred_date }}
			<span class="calender-icon"></span>
		</div>
		<div class="col-md-6 col-xs-12 col-sm-12 group time ">
			{{ form.elements.preferred_time }}
		</div>
		<div class="col-md-6 col-xs-12 col-sm-12 group">
			{{ form.elements.any_other_information }}
		</div>
		<div class="submit-info col-md-12 col-xs-12 col-sm-12  ">
		{{ form.elements.yes_sign_me_up_to_exclusive_news_events_offers_ }}
		<div class="cta-visitus">
			{{ form.actions.submit }}
		</div>	
	    </div>
	</form>
	
</div>
