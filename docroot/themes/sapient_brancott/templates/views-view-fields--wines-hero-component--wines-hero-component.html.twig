 <div id="hero-component" class="container-fluid  hero-container product-details-hero" >
 	<div class="banner-image" style="background-image: url('{{ fields.field_wine_background_image.content }}')"></div>
   <div class="grain-noise"></div>
	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 hero-inner-container">
	  <span class="header_f">{{ wine_range }}</span>
	  <h1>{{ wine_title }}</h1>
	  <p class="hidden-sm hidden-xs">{{ wine_description }}</p>
	  <div class="cta-visitus hidden-sm hidden-xs">
	  	<a data-ctbuy-key="{{ fields.field_click_to_buy.content }}" data-ctbuy-lang="en" href="#" target="_blank" title="Buy Now" class="cta dark find-out-more">BOOK NOW</a>
	  </div>	
	</div>
   <div class="hidden-sm hidden-xs hero-bottle-wrapper">
	<picture>
		<source class="hero-bottle" media="(max-width: 1281px)" srcset="{{ fields.field_wine_bottle_image.content }}"> 
		<source class="hero-bottle" media="(max-width: 769px)"  srcset="{{ fields.field_wine_bottle_image.content }}"> 
		<source  class="hero-bottle" srcset="{{ fields.field_wine_bottle_image.content }}"> 
		<img class="hero-bottle" src="{{ fields.field_wine_bottle_image.content }}" alt="Bottle"> 
	</picture>
   </div>
   	<div class="hero-bottom">
        <img src="/{{ directory }}/css/images/triange-1.png" alt="" class="triangle">
        <img src="/{{ directory }}/css/images/noise-triangle.svg" alt="" class="triangle-right">
    </div>
</div>
<div id="product-detail-hero-mobile" class="product-details-mobile hidden-lg">
	<picture>
		<source class="hero-bottle" media="(max-width: 1281px)" srcset="{{ fields.field_wine_bottle_image.content }}"> 
		<source class="hero-bottle" media="(max-width: 769px)"  srcset="{{ fields.field_wine_bottle_image.content }}"> 
		<source  class="hero-bottle" srcset="{{ fields.field_wine_bottle_image.content }}"> 
		<img class="hero-bottle" src="{{ fields.field_wine_bottle_image.content }}" alt="Bottle"> 
	</picture>
	<p>{{ wine_description }}</p>
</div>
{{ attach_library('sapient_brancott/pr-ctbuy-connector') }}