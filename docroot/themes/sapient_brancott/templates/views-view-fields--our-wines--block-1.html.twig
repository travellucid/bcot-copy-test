<div class="top-section">
		<p class="header_f">{{ fields.field_our_wine_heading.content }}</p>
		<h2 class="header_a">{{ fields.field_our_wine_title.content }}</h2>
		<p class="description-visit-us">{{ fields.field_our_wine_description.content }}</p>
	</div>
	<div id="product-grid-carousal" class="carousel slide" data-ride="carousel" data-interval="false">
	
	     <div class="category-grid carousel-inner" role="listbox">
			{{ fields.view.content }}
			<a class="product-tile see-all-wines grid-view" href="{{ fields.field_see_all_wines.content }}">
				<div class="product-shot">
					<span>{{ fields.field_see_all_wines_1.content }}</span>
					<img src="https://placeholdit.imgix.net/~text?w=248&h=770" />
					<div class="product-bg"></div>
				</div>
			</a>
		</div>
		<ol class="carousel-indicators">
		   {% if wine_count > 1 %}
		   {% for i in 0..wine_count %}
		   
		   {% if loop.first %}
		      <li data-target="#product-grid-carousal" data-slide-to="{{ i }}" class="active"></li>
		   {% elseif not loop.last %}
		      <li data-target="#product-grid-carousal" data-slide-to="{{ i }}"></li>
		   {% endif %}
		   
		   {% endfor %}
		    {% endif %}
		</ol>
	    </div>
	     <a class="cta dark see-all-link carousel-view" href="{{ fields.field_see_all_wines.content }}">{{ fields.field_see_all_wines_1.content }}</a> 
	