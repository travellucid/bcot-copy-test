
{% set image_list = fields.field_image_vertical.content|split(',') %}

{% set image_list_v1 = fields.field_image_vertical_1.content|split(',') %}
{% set image_list_v2 = fields.field_image_vertical_2.content|split(',') %}
{% set image_list_v3 = fields.field_image_vertical_3.content|split(',') %}
{% set image_list_v4 = fields.field_image_vertical_4.content|split(',') %}
{% set image_list_v6 = fields.field_image_vertical_6.content|split(',') %}
{% set image_list_v7 = fields.field_image_vertical_7.content|split(',') %}
{% set image_list_v8 = fields.field_image_vertical_8.content|split(',') %}
{% set image_list_v9 = fields.field_image_vertical_9.content|split(',') %}
{% set video_list = fields.field_video_youtube_.content|split(',') %}
{% set alt_list = fields.field_image_vertical_5.content|split(',') %}
{#{% set image_list_horizontal = fields.field_image_vertical_3.content|split(',') %}#}
{% if (fields.field_media_style.content == "vertical_style") %}
    <div class="vertical-timeline">
        <span class="header_d line-bg">{{ fields.field_timeline_date.content }}</span>
        {% if fields.field_timeline_heading.content %}
            <h2 class="header_b">{{ fields.field_timeline_heading.content |upper }}</h2>
        {% endif %}

        <div class="common-margin">
            <div class="quote-author">
                {% if fields.field_timeline_description.content %}
                    <p class="">{{ fields.field_timeline_description.content }}</p>
                {% endif %}


                {% if fields.field_timeline_subtext_one.content %}
                    <p class="quote">
                        {{ fields.field_timeline_subtext_one.content }}</p>
                    {% endif %}
                    {% if fields.field_timeline_subtext_second.content %}
                    <span class="author">{{ fields.field_timeline_subtext_second.content }}</span>
                {% endif %}
            </div>

            <div class="img-wrapper-vertical common-margin">
                {% if fields.field_image_vertical.content %}
                    {% for key, image in image_list %}
                        {#<img  src="{{ image }}" alt="{{ fields.field_image_vertical_5.content }}"> #}
                        <picture>
                            <source   media="(max-width: 321px)"  srcset="{{ image_list_v1[key] }}"> 

                            <source  media="(max-width: 691px)"  srcset="{{ image_list_v6[key] }}">
                            <source  media="(max-width: 769px)"  srcset="{{ image_list_v1[key] }}">
                            <source  media="(max-width: 1281px)" srcset="{{ image_list_v8[key] }} 1x, {{ image_list_v9[key] }} 2x">
                            {# <source  media="(max-width: 1025px)" srcset="{{ image_list[key] }}"> #}

                            {# <source  media="(max-width: 1401px)" srcset="{{ image }}"> #}

                            <img  src="{{ image }}" alt="{{ alt_list[key] }}"> 
                        </picture>
                    {% endfor %}
                {% endif %}
                {% if fields.field_video_youtube_.content %}
                    {% for video in video_list %}
                        {% if (fields.field_suggested_videos.content) %}
                            {% set suggested_videos = fields.field_suggested_videos.content %}
                        {% else %}
                            {% set suggested_videos = 0 %}
                        {% endif %}
                        {% if (fields.field_autoplay.content) %}
                            {% set autoplay = fields.field_autoplay.content %}
                        {% else %}
                            {% set autoplay = 0 %}
                        {% endif %}
                        {% if (fields.field_video_title.content) %}
                            {% set show_title = fields.field_video_title.content %}
                        {% else %}
                            {% set show_title = 0 %}
                        {% endif %}
                        {% if (fields.field_player_controls.content) %}
                            {% set controls = fields.field_player_controls.content %}
                        {% else %}
                            {% set controls = 0 %}
                        {% endif %}
                        {% if (fields.field_looping.content) %}
                            {% set looping = fields.field_looping.content %}
                        {% else %}
                            {% set looping = 0 %}
                        {% endif %}
                        {% if (fields.field_autohide.content) %}
                            {% set autohide = fields.field_autohide.content %}
                        {% else %}
                            {% set autohide = 0 %}
                        {% endif %}
                        {% if (fields.field_iv_load.content) %}
                            {% set iv_load = 1 %}
                        {% else %}
                            {% set iv_load = 3 %}
                        {% endif %}
                        <iframe class="youtube common-margin" src="https://www.youtube.com/embed/{{ video |trim}}?rel={{ suggested_videos }}&autoplay={{ autoplay }}&showinfo={{ show_title }}&controls={{ controls }}&loop={{ looping }}&autohide={{ autohide }}&iv_load_policy={{ iv_load }}"></iframe>
                        {% endfor %}
                    {% endif %}
            </div>

        </div>
    </div>

{% elseif (fields.field_media_style.content == "horizontal_style") %}
    <div class="horizontal-timeline">
        <div class="top">
            <span class="header_d line-bg">{{ fields.field_timeline_date.content }}</span>
            {% if fields.field_timeline_heading.content %}
                <h2 class="header_b">{{ fields.field_timeline_heading.content |upper }}</h2>
            {% endif %}

            <div class="">

                <div class="common-margin">
                    {% if fields.field_timeline_description.content %}
                        <p class="common-margin ">{{ fields.field_timeline_description.content }}</p>
                    {% endif %}
                    {% if (fields.field_timeline_subtext_one.content or fields.field_timeline_subtext_second.content) %}
                        <div class="quote-author">

                            {% if fields.field_timeline_subtext_one.content %}
                                <p class="quote ">{{ fields.field_timeline_subtext_one.content }}</p>
                            {% endif %}
                            {% if fields.field_timeline_subtext_second.content %}
                                <span class="author">{{ fields.field_timeline_subtext_second.content }}</span>
                            {% endif %}
                        </div>
                    {% endif %}
                </div> 
            </div>   


        </div>


        {% if fields.field_image_vertical.content %}
            <div class="img-wrapper-horizontal common-margin">

                {% for key, image_horizontal in image_list_v3 %}
                    {% if ( key < 3) %}
                        {#              <img  src="{{ image_horizontal }} " alt="{{ fields.field_image_vertical_5.content }}"> #}
                        <picture>
                            <source   media="(max-width: 321px)"  srcset="{{ image_horizontal }}"> 

                            <source  media="(max-width: 691px)"  srcset=" {{ image_list_v7[key] }}"> 
                            <source  media="(max-width: 769px)"  srcset="{{ image_horizontal }}"> 

                            <source  media="(max-width: 1025px)" srcset="{{ image_horizontal }}">

                            <source  media="(max-width: 1401px)" srcset="{{ image_horizontal }}"> 

                            <img  src="{{ image_horizontal }}" alt="{{ alt_list[key] }}"> 
                        </picture>
                    {% endif %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% else %}
    <div class="horizontal-timeline">
        <div class="top">
            <span class="header_d line-bg">{{ fields.field_timeline_date.content }}</span>
            {% if fields.field_timeline_heading.content %}
                <h2 class="header_b">{{ fields.field_timeline_heading.content |upper }}</h2>
            {% endif %}

            <div class="">

                <div class="common-margin">
                    {% if fields.field_timeline_description.content %}
                        <p class="common-margin ">{{ fields.field_timeline_description.content }}</p>
                    {% endif %}
                    {% if (fields.field_timeline_subtext_one.content or fields.field_timeline_subtext_second.content) %}
                        <div class="quote-author">

                            {% if fields.field_timeline_subtext_one.content %}
                                <p class="quote ">{{ fields.field_timeline_subtext_one.content }}</p>
                            {% endif %}
                            {% if fields.field_timeline_subtext_second.content %}
                                <span class="author">{{ fields.field_timeline_subtext_second.content }}</span>
                            {% endif %}
                        </div>
                    {% endif %}
                </div> 
            </div>   


        </div>
    </div>
{% endif %}



