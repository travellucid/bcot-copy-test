        </div>
        <div class="col-md-6 col-xs-12 col-sm-12 group ">
            {{ form.elements.email_address }}
        </div>
        <div class="col-md-6 col-xs-12 col-sm-12 group">
            {{ form.elements.date_of_birth }}
        </div>
        <div class="col-md-6 col-xs-12 col-sm-12 group">
            {{ form.elements.gender }}
            <span class="dropdown-icon"></span>
        </div>
        <div class="col-md-6 col-xs-12 col-sm-12 group country-primary">
            {{ form.elements.country }}
            <span class="dropdown-icon"></span>
        </div>
        <div class="col-md-6 col-xs-12 col-sm-12 group country-secondary ca">
            {{ form.elements.state }}
